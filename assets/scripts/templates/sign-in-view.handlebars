<form id="sign-in" class="auth-login-form">
<fieldset>
<div id="sign-in-modal" class="modal fade" tabindex="-1" role="dialog">
  <div class="modal-dialog">
  	<div class="modal-content">
    <div class="modal-header">
        <h3>Sign in<span class="extra-title muted"></span></h3>
    </div>
    <div class="modal-body form-horizontal">
        <div class="control-group">
            <div class="controls">
            <input type="text" name="credentials[email]" value="" placeholder="email" id="sign-in-email" class="form-control" required>
            </div>
        </div>
          <div class="control-group">
            <div class="controls">
              <input type="password" name="credentials[password]" value="" placeholder="password" id="sign-in-password" class="form-control" required>
            </div>
        </div>
    </div>
      <div class="alert alert-danger password-mismatch-message">
        <strong>Opps!</strong> Something went wrong. Please try again.
      </div>
    <div class="modal-footer">
        <button type = "button" class="btn cls-sign-up-modal" data-dismiss="modal" aria-hidden="true">Close</button>
        <input type="submit" name="submit" value="Sign In!" class="btn btn-primary btn-md" id="sign-in-button">
    </div>
  </div>
</div>
</div>
</fieldset>
</form>
