<div class="table-container">
<div class='breadcrumb'>
<a id="show-users" >All The Things</a>
  <span class="glyphicon glyphicon-chevron-right"></span>
 <a id="user-folders" data-folder="{{folder}}" data-id="{{uploads.0._owner}}">{{folder}}</a>
 <span class="glyphicon glyphicon-chevron-right"></span>
 <span id="current-folder">{{uploads.0.path}}</span>
</div>

<table class="table table-responsive" style="float:right">
<thead class="thead-default">
  <tr>
    <th></th>
    <th style="padding-left: 15px;">Name</th>
    <th>Created</th>
    <th>Updated</th>
    <th style= "text-align:center" >Actions</th>
  </tr>
  </thead>
  <tbody>
    {{#each uploads as |upload|}}
    <tr class="clickable">

      <td data-url="{{upload.url}}" class="file file-path clickable">
        {{#if upload.isImage}}
        <img src="{{upload.url}}" class="img-thumbnail" alt="{{upload.title}}" height=75 width=75>
        {{else}}
      <img style="padding-bottom: 15px;" src="../../../assets/images/all-the-things-template.jpg.png" class="img-thumbnail" alt="{{upload.title}}" height=75 width=75>
        {{/if}}
      </td>

      <td data-url="{{upload.url}}" class="file-path clickable">
      <span>{{upload.title}}</span>
      </td>

    <td data-url="{{upload.url}}" class="file-path clickable" style="color: black !important;">{{upload.createdAt}}</td>

    <td data-url="{{upload.url}}" class="file-path clickable" style="color: black !important;">{{upload.updatedAt}}</td>

        <td style="text-align:right;" class="file">
            <a href="{{upload.url}}" download class="btn btn-default" aria-hidden="true">
              <span class="glyphicon glyphicon-download"></span>
            </a>
        {{#if upload.editable}}
        <button type="button" class="btn btn-default update-button" data-id="{{upload.id}}">
          <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        </button>
        <button type="button" class="btn btn-default delete-button" data-id="{{upload.id}}">
          <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
        </button>
      </td>
      {{/if}}
    </tr>
    {{/each}}
  </tbody>
</table>
</div>
