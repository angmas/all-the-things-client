<h2>File List</h2>
<a id="show-users" >All The Things</a>
> <a id="user-folders" data-id="{{uploads.0._owner}}">{{folder}}</a>
> {{uploads.0.path}}
<table class="table table-responsive" sytle = "float:right">
<thead class="thead-default">
  <tr>
    <th style= "text-align:left">File Title</th>
    <th style= "text-align:left">File Link</th>
    <th style= "text-align:left" colspan="3">Actions</th>
  </tr>
  </thead>
  <tbody>
    {{#each uploads as |upload|}}
    <tr>
      <td>{{upload.title}}</td>
      <td><a target="_blank" href="{{upload.url}}">{{upload.url}}</td>
        <td>
            <a href="{{upload.url}}" download class="btn btn-default glyphicon glyphicon-download" aria-hidden="true"></a>
        </td>
        {{#if upload.editable}}
      <td>
        <button type="button" class="btn btn-default update-button" data-id="{{upload.id}}">
          <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        </button>
      </td>
      <td>
        <button type="button" class="btn btn-default delete-button" data-id="{{upload.id}}">
          <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
        </button>
      </td>
      {{/if}}
    </tr>
    {{/each}}
  </tbody>



</table>
